<%- include('partials/header') %>
<%- include('partials/sidebar') %>
<div class="col mt-3">
  <%- include('partials/settings') %>

<div class=" bg-light" style="width: 500px; padding: 20px;">
    <form action="/updateUsername" method="POST" class="needs-validation" novalidate="">
       <label for="" class="form-label">ឈ្មោះអ្នកប្រើប្រាស់</label> 
       <input type="text" name="username" class="form-control" value="<%= currentUser %>" required>
       <label for="" class="form-label">ទីតាំង</label> 
       <input type="text" class="form-control" value="<%= userBranch  %>" disabled>
       <label for="" class="form-label">តួនាទី</label> 
       <input type="text" class="form-control" value="<%= currentUserRole  %>" disabled>
      
       <br>
       <button type="submit" class="btn btn-dark">កែឈ្មោះ</button>
                <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
            ប្តូរលេខសម្ងាត់
        </button>
    </form>

    <form action="/change-password" method="POST">
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <label for="" class="form-label">លេខសម្ងាត់បច្ចុប្បន្ន</label> 
          <input type="password" name="currentPassword" class="form-control">
          <label for="" class="form-label">លេខសម្ងាត់ថ្មី</label> 
          <input type="password" name="newPassword" class="form-control">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
    </form>
</div>



<%- include('partials/footer') %>